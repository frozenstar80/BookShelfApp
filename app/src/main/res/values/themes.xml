<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BookShelfApp" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="android:showDividers">beginning</item>
        <item name="android:divider">#070707</item>
    </style>

    <style name="Theme.BookShelfApp" parent="Base.Theme.BookShelfApp" />

    <style name="MaterialButton">
        <item name="textAllCaps">false</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="cornerRadius">30dp</item>
        <item name="android:insetTop">@dimen/_0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="WhiteMaterialButton" parent="MaterialButton">
        <item name="strokeColor">@color/text_color</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="YellowMaterialButton" parent="MaterialButton">
        <item name="android:backgroundTint">@color/yellow</item>
    </style>

    <style name="MaterialThemeOulinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="boxStrokeColor">@color/yellow</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="hintTextColor">@color/yellow</item>
        <item name="android:colorAccent">@color/black</item>
        <item name="colorAccent">@color/black</item>
    </style>
</resources>